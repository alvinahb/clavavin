{{template "base" .}}

{{define "content"}}
    <div class="row" id="page-title">
        <h3>Connexion au compte</h3>
    </div>

    <div class="row justify-content-center">
        <form class="col-4">
            <div class="form-group">
                <label for="username">Email</label>
                {{with .Form.Errors.Get "email"}}
                    <label class="text-danger">{{.}}</label>
                {{end}}
                <input type="text" class="form-control {{with .Form.Errors.Get "email"}} is-invalid {{end}}"
                    id="email" name="email" value="" required>
            </div>

            <div class="form-group mt-1">
                <label for="username">Mot de passe</label>
                {{with .Form.Errors.Get "password"}}
                    <label class="text-danger">{{.}}</label>
                {{end}}
                <input type="text" class="form-control {{with .Form.Errors.Get "password"}} is-invalid {{end}}"
                    id="password" name="password" value="" required>
            </div>

            <input type="submit" class="btn btn-primary mt-3" value="Se connecter">
        </form>
    </div>
{{end}}